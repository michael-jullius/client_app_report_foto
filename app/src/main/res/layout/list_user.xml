<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_user_table"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/nama_user_list"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:background="@drawable/bg_user_table"
        android:padding="5dp"
        android:text="nama"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="15dp" />

    <TextView
        android:id="@+id/user_role_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/nama_user_list"
        android:padding="5dp"
        android:text="user lapangan"
        android:textColor="@color/black"
        android:textSize="15dp" />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:background="@drawable/bg_user_table"
        android:layout_alignParentRight="true"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/user_edit_table"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginLeft="5dp"
            android:background="@drawable/ic_baseline_edit_24" />
        <ImageButton
            android:layout_marginStart="10dp"
            android:layout_width="20dp"
            android:id="@+id/user_delete_table"
            android:layout_marginRight="5dp"
            android:layout_height="20dp"
            android:background="@drawable/ic_baseline_delete_24"/>
    </LinearLayout>

</RelativeLayout>